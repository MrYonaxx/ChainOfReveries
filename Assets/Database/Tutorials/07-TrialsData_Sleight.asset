  trialsName: 07 - Sleight
  trialsDescription: Learn how to do special moves, called Sleight.
  deckPlayer: {fileID: 11400000, guid: ec59b3d0bf9ebaa46bd1ba314aabadbc, type: 2}
  deckEnemy: {fileID: 11400000, guid: 6f4c134a24ba94f48a31fb8522fbfe6e, type: 2}
