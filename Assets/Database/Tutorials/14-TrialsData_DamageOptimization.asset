  trialsName: 14 - Damage Optimization
  trialsDescription: Learn this hidden property on every card.
  deckPlayer: {fileID: 11400000, guid: 6413665f6d2cf874493f573679223962, type: 2}
  deckEnemy: {fileID: 11400000, guid: a3949340fa5b2c54dae067927711d47c, type: 2}
